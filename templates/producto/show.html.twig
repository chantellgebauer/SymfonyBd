{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5 mb-3"><font color="white">Producto</font></h1>
    <body style="background-color:#483D8B;"></body>
    <div class="card">
    <div class="card-header">
     <center><img src="{{ asset('super.png') }}" alt="Symfony!"/> </center>
     
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ producto.color }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ producto.codigo }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-info float-right" href="{{ path('app_producto_index') }}">back to list</a>

    <a class="btn btn-outline-info float-right" href="{{ path('app_producto_edit', {'id': producto.id}) }}">edit</a>

    {{ include('producto/_delete_form.html.twig') }}
     </div>
     </div>
     </div>
{% endblock %}